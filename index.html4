    // === Build Functions ===
    function createBuild() {
      if (!generatedFiles) {
        log('No files to build. Run a scan first.', 'warning');
        return;
      }

      log('Creating build package...', 'system');
      
      setTimeout(() => {
        log('Compressing files...', 'scan');
      }, 300);
      
      setTimeout(() => {
        log('Build created successfully!', 'success');
        if (els.downloadBtn) els.downloadBtn.disabled = false;
        if (els.buildStatus) {
          els.buildStatus.textContent = 'Built';
          els.buildStatus.style.color = 'var(--accent)';
        }
      }, 1000);
    }

    async function downloadZip() {
      if (!generatedFiles) {
        log('Create a build first', 'warning');
        return;
      }

      log('Generating ZIP archive...', 'system');

      try {
        const zip = new JSZip();
        
        // Add files to zip
        Object.keys(generatedFiles).forEach(path => {
          zip.file(path, generatedFiles[path]);
        });

        // Generate blob
        const content = await zip.generateAsync({ type: 'blob' });
        
        // Download
        const url = URL.createObjectURL(content);
        const a = document.createElement('a');
        a.href = url;
        a.download = 'mind-key-app.zip';
        document.body.appendChild(a);
        a.click();
        document.body.removeChild(a);
        URL.revokeObjectURL(url);

        log('ZIP downloaded successfully!', 'success');
        log('Run: npm install', 'info');
      } catch (err) {
        log('Error creating ZIP: ' + err.message, 'error');
      }
    }

